function bind_ga_events() {

  $("#back_a_page").click( function() {
    ga( 'send', 'event', 'button', 'click', 'back-button' )
  })

  $("[id$=-change]").click( function() {
    id = $(this).attr('id')
    ga( 'send', 'event', 'question', 'reopened', id.replace( '-change', '' ) )
  })

  $("[id$=-nav]").click( function() {
    id = $(this).attr('id')
    ga( 'send', 'event', 'page', 'changed', id.replace( '-nav' ,'' ) )
  })

  $( ".question-open > button").each( function() {

    id = $(this).parent().attr( "id" )
    $(this).click( function() {
      ga( 'send', 'event', 'question', 'answered', id.replace( '-open', '' ) )
    })

  })

}

<% else %>
  function bind_ga_events() {
  }
